@page
@model LoginModel
@{
    ViewData["Title"] = "Home page";
}
<h1>Login</h1>

<form method="post" >
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" id="username" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" asp-for="Pass" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
